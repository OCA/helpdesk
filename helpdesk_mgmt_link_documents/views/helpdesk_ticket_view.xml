<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="ticket_view_form_inherit" model="ir.ui.view">
    <field name="name">helpdesk.ticket.view.form.inherit</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='main']/group[1]" position="after">
        <group>
          <field name="link_settings" invisible="1"/>
          <field name="link_docs" attrs="{'invisible': [('link_settings', '=', False)]}"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
