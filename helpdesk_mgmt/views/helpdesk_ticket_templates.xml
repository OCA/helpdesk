<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_layout"
        name="Portal layout: ticket menu entry"
        inherit_id="portal.portal_breadcrumbs"
        priority="50"
    >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'ticket' or ticket"
                t-attf-class="breadcrumb-item #{'active ' if not ticket else ''}"
            >
                <a t-if="ticket" t-attf-href="/my/tickets?{{ keep_query() }}">Tickets
                </a>
                <t t-else="">Tickets</t>
            </li>
            <li t-if="ticket" class="breadcrumb-item active">
                <t t-esc="ticket.name" />
            </li>
        </xpath>
    </template>
    <template
        id="portal_my_home"
        name="Portal My Home : ticket entries"
        inherit_id="portal.portal_my_home"
        priority="40"
    >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="ticket_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Tickets</t>
                <t t-set="url" t-value="'/my/tickets'" />
                <t t-set="count" t-value="ticket_count" />
            </t>
            <form method="POST" t-attf-action="/new/ticket">
                <input
                    type="hidden"
                    name="csrf_token"
                    t-att-value="request.csrf_token()"
                />
                <button
                    name="create_new_ticket"
                    type="action"
                    class="btn btn-primary"
                    groups="base.group_portal"
                    style="float: right; margin-right: 0px; margin-top:5px;"
                >New Ticket
                </button>
            </form>
        </xpath>
    </template>
    <template id="portal_my_tickets" name="My tickets">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
            <form method="POST" t-attf-action="/new/ticket">
                <h3>Tickets
                    <t t-call="portal.portal_searchbar" />
                    <button
                        name="create_new_ticket"
                        type="action"
                        class="btn btn-primary"
                        groups="base.group_portal"
                        style="float: right; margin-right: 5px;"
                    >New Ticket
                    </button>
                </h3>
                <input
                    type="hidden"
                    name="csrf_token"
                    t-att-value="request.csrf_token()"
                />
            </form>
            <t t-if="not tickets">
                <p>There are no tickets in your account.</p>
            </t>
            <div t-if="tickets" class="panel panel-default">
                <div class="table-responsive">
                    <table class="table table-hover o_portal_my_doc_table">
                        <thead>
                            <tr class="active">
                                <th>By</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Stage</th>
                                <th>Create Date</th>
                                <th>Last Stage Update</th>
                                <th>Close Date</th>
                            </tr>
                        </thead>
                        <t t-foreach="tickets" t-as="ticket">
                            <tr>
                                <td>
                                    <t t-esc="ticket.partner_id.name" />
                                </td>
                                <td>
                                    <a t-attf-href="/my/ticket/#{ticket.id}">
                                        <t t-esc="ticket.name" />
                                    </a>
                                </td>
                                <td>
                                    <t t-esc="ticket.category_id.name" />
                                </td>
                                <td>
                                    <t t-esc="ticket.stage_id.name" />
                                </td>
                                <td>
                                    <span t-field="ticket.create_date" />
                                </td>
                                <td>
                                    <span t-field="ticket.last_stage_update" />
                                </td>
                                <td>
                                    <span t-field="ticket.closed_date" />
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div t-if="pager" class="o_portal_pager text-center">
                    <t t-call="portal.pager" />
                </div>
            </div>
        </t>
    </template>
    <template id="portal_helpdesk_ticket_page" name="Ticket Portal Template">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    <t t-call='portal.record_pager' />
                                    <span t-field="ticket.name" />
                                </h4>
                            </div>
                            <t t-foreach="closed_stages" t-as="stage">
                                <form
                                    method="GET"
                                    t-if="not ticket.closed_date"
                                    t-attf-action="/help/ticket/close"
                                    style="display:inline;"
                                >
                                    <input
                                        type="hidden"
                                        name="ticket_id"
                                        t-attf-value="#{ticket.id}"
                                    />
                                    <input
                                        type="hidden"
                                        name="stage_id"
                                        t-attf-value="#{stage.id}"
                                    />
                                    <button
                                        class="btn btn-success pull-right"
                                        style="margin-right:15px;margin-top:3px;"
                                    >
                                        <span t-field="stage.name" />
                                    </button>
                                </form>
                            </t>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="mb8">
                            <div>
                                <div class="pull-left">
                                    <strong>Date:</strong>
                                    <span t-field="ticket.create_date" />
                                    <br />
                                    <b>Category:</b>
                                    <t t-esc="ticket.category_id.name" />
                                    <br />
                                    <b>Stage:</b>
                                    <t t-esc="ticket.stage_id.name" />
                                    <br />
                                </div>
                                <div class="pull-right">
                                    <strong>Last Stage Update:</strong>
                                    <span t-field="ticket.last_stage_update" />
                                    <br />
                                </div>
                            </div>
                            <br />
                            <br />
                            <h4 class="page-header">Description</h4>
                            <t t-raw="ticket.description" />
                            <br />
                        </div>
                        <h4 class="page-header">History</h4>
                        <!-- Options:Ticket Chatter: user can reply -->
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="ticket" />
                        </t>
                    </div>
                </div>
            </div>
            <div class="oe_structure mb32" />
        </t>
    </template>
    <template id="portal_create_ticket_main_root_layout" name="Create ticket">
        <t t-call="website.layout">
            <div id="wrap" class="container mt-4">
                <div class="oe_structure">
                    <section class="pt8 pb8">
                        <div class="container">
                            <div class="row s_nb_column_fixed">
                                <div class="col-lg-12 s_title pt16 pb16">
                                    <h1>Send a new ticket</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="container mt-2">
                    <div class="row">
                        <div class="oe_structure" id="oe_structure_website_top" />
                        <div class="col-md-9 pl-4">
                            <div class="container">
                                <section
                                    class="s_website_form"
                                    data-vcss="001"
                                    data-snippet="s_website_form"
                                >
                                    <div class="container">
                                        <form
                                            action="/help/ticket/submit"
                                            method="POST"
                                            class="s_website_form container-fluid mt32"
                                            enctype="multipart/form-data"
                                            data-success_page="/help/thankyou"
                                        >
                                            <div
                                                class="s_website_form_rows s_col_no_bgcolor"
                                            >
                                                <!-- TOKEN -->
                                                <input
                                                    type="hidden"
                                                    name="csrf_token"
                                                    t-att-value="request.csrf_token()"
                                                />
                                                <input
                                                    type="hidden"
                                                    name="id_team"
                                                    t-attf-value="#{id_team}"
                                                />
                                                <input
                                                    type="hidden"
                                                    name="id_user"
                                                    t-attf-value="#{id_user}"
                                                />
                                                <!-- NAME -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                                    data-type="char"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="id_name_field"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Name
                                                                </span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input
                                                                    id="id_name_field"
                                                                    type="text"
                                                                    class="form-control o_website_form_input"
                                                                    required="True"
                                                                    name="name"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- EMAIL -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                                    data-type="email"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="id_email_field"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Email
                                                                </span>
                                                            </label>
                                                            <div
                                                                class="col-sm col-xs-12"
                                                            >
                                                                <input
                                                                    id="id_email_field"
                                                                    type='email'
                                                                    class='form-control s_website_form_input'
                                                                    required="True"
                                                                    name="email"
                                                                    readonly="False"
                                                                    t-if="id_user"
                                                                    t-attf-value="#{email}"
                                                                />
                                                                <input
                                                                    id="id_email_field"
                                                                    type='email'
                                                                    class='form-control s_website_form_input'
                                                                    required="True"
                                                                    name="email"
                                                                    t-else=""
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- CATEGORIES -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                                    data-type="select"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="id_category_field"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Categories
                                                                </span>
                                                            </label>
                                                            <div
                                                                class="col-sm col-xs-12"
                                                            >
                                                                <select
                                                                    class='form-control s_website_form_input'
                                                                    id="id_category_field"
                                                                    name="category"
                                                                    required="True"
                                                                >
                                                                    <t
                                                                        t-foreach="categories"
                                                                        t-as="cat"
                                                                    >
                                                                        <option
                                                                            t-attf-value="#{cat.id}"
                                                                        >
                                                                            <t
                                                                                t-esc="cat.name"
                                                                            />
                                                                        </option>
                                                                    </t>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- SUBJECT -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                                    data-type="char"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="id_subject_field"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Subject
                                                                </span>
                                                            </label>
                                                            <div
                                                                class="col-sm col-xs-12"
                                                            >
                                                                <input
                                                                    id="id_subject_field"
                                                                    type="text"
                                                                    class="form-control s_website_form_input"
                                                                    name="subject"
                                                                    required="1"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- DESCRIPTION -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                                    data-type="char"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="id_description_field"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Description
                                                                </span>
                                                            </label>
                                                            <div
                                                                class="col-sm col-xs-12"
                                                            >
                                                                <textarea
                                                                    id="id_description_field"
                                                                    class="form-control s_website_form_input"
                                                                    name="description"
                                                                    required="True"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- ATTACHMENTS -->
                                                <div
                                                    class="form-group row form-field o_website_form_custom"
                                                    data-type="binary"
                                                    data-name="Block"
                                                >
                                                    <div class="container">
                                                        <div
                                                            class="row s_col_no_resize s_col_no_bgcolor"
                                                        >
                                                            <label
                                                                class="col-form-label col-auto s_website_form_label"
                                                                style="width: 200px"
                                                                for="helpdesk5"
                                                            >
                                                                <span
                                                                    class="s_website_form_label_content"
                                                                >Attachment(s)
                                                                </span>
                                                            </label>
                                                            <div
                                                                class="col-sm col-xs-12"
                                                            >
                                                                <input
                                                                    id="helpdesk5"
                                                                    type="file"
                                                                    name="attachments"
                                                                    class="form-control s_website_form_input"
                                                                    multiple="true"
                                                                    accept="image/*,application/pdf,video/*"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- SUBMIT BUTTON -->
                                                <div
                                                    class="form-group form-field s_website_form_submit"
                                                >
                                                    <button
                                                        class="btn btn-primary btn-lg s_website_form_send"
                                                    >Submit
                                                        Ticket
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <div class="oe_structure" id="oe_structure_website_bot" />
                    </div>
                </div>
            </div>
        </t>
    </template>
    <!---
     The ticket creation is separated into three templates as I do not know any other way to allow different templates spawned from a single one to coexist separately, this is:
    the former template for creating tickets -`portal_create_ticket`- was rendered by all teams' webforms and was user-editable, which meant that any modifications
    made by the localization team (demo data) will also affect the helpdesk team (demo data) rendered website, as an example.

     This three-way template separation alongside a dynamic `ir.ui.view` many2one record assigned to each team allows to modify and persist the changes of a team webform
    -->
    <!-- Ticket creation main layout which defines the needed website.layout `t` tag -->
    <template id="portal_create_ticket_main_layout" name="Create ticket">
        <t t-call="website.layout">
            <div id="wrap" class="container mt-4">
            </div>
        </t>
    </template>
    <!-- Main form which displays what a user can see, from the title to the input tags.
    As mentioned before, this template is assigned to all teams which have a webform endpoint as a `ir.ui.view` many2one object
    -->
    <template id="portal_create_ticket_inner_form" name="Create ticket inner form">
        <!-- Ticket creation inner form definition.  -->
        <div class="oe_structure">
            <section class="pt8 pb8">
                <div class="container">
                    <div class="row s_nb_column_fixed">
                        <div class="col-lg-12 s_title pt16 pb16">
                            <h1>Send a new ticket</h1>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container mt-2">
            <div class="row">
                <div class="oe_structure" id="oe_structure_website_top" />
                <div class="col-lg-8">
                    <div class="container">
                        <form
                            action="/help/ticket/submit"
                            method="POST"
                            class="s_website_form container-fluid mt32"
                            enctype="multipart/form-data"
                            data-success_page="/help/thankyou"
                        >
                            <!-- TOKEN -->
                            <input
                                type="hidden"
                                name="csrf_token"
                                t-att-value="request.csrf_token()"
                            />
                            <input
                                type="hidden"
                                name="id_team"
                                t-attf-value="#{id_team}"
                            />
                            <input
                                type="hidden"
                                name="id_user"
                                t-attf-value="#{id_user}"
                            />
                            <!-- NAME -->
                            <div
                                class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                data-type="char"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="id_name_field"
                                    >
                                        <span class="s_website_form_label_content">Name
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input
                                        id="id_name_field"
                                        type="text"
                                        class="form-control o_website_form_input"
                                        required="True"
                                        name="name"
                                    />
                                </div>
                            </div>
                            <!-- EMAIL -->
                            <div
                                class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                data-type="email"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="id_email_field"
                                    >
                                        <span class="s_website_form_label_content">Email
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input
                                        id="id_email_field"
                                        type='email'
                                        class='form-control s_website_form_input'
                                        required="True"
                                        name="email"
                                        readonly="False"
                                        t-if="id_user"
                                        t-attf-value="#{email}"
                                    />
                                    <input
                                        id="id_email_field"
                                        type='email'
                                        class='form-control s_website_form_input'
                                        required="True"
                                        name="email"
                                        t-else=""
                                    />
                                </div>
                            </div>
                            <!-- CATEGORIES -->
                            <div
                                class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                data-type="select"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="id_category_field"
                                    >
                                        <span
                                            class="s_website_form_label_content"
                                        >Categories
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <select
                                        class='form-control s_website_form_input'
                                        id="id_category_field"
                                        name="category"
                                        required="True"
                                    >
                                        <t t-foreach="categories" t-as="cat">
                                            <option t-attf-value="#{cat.id}">
                                                <t t-esc="cat.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <!-- SUBJECT -->
                            <div
                                class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                data-type="char"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="id_subject_field"
                                    >
                                        <span
                                            class="s_website_form_label_content"
                                        >Subject
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input
                                        id="id_subject_field"
                                        type="text"
                                        class="form-control s_website_form_input"
                                        name="subject"
                                        required="1"
                                    />
                                </div>
                            </div>
                            <!-- DESCRIPTION -->
                            <div
                                class="form-group row form-field o_website_form_custom o_website_form_required_custom"
                                data-type="char"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="id_description_field"
                                    >
                                        <span
                                            class="s_website_form_label_content"
                                        >Description
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <textarea
                                        id="id_description_field"
                                        class="form-control s_website_form_input"
                                        name="description"
                                        required="True"
                                    />
                                </div>
                            </div>
                            <!-- ATTACHMENTS -->
                            <div
                                class="form-group row form-field o_website_form_custom"
                                data-type="binary"
                                data-name="Block"
                            >
                                <div class="col-lg-3 col-md-4">
                                    <label
                                        class="col-form-label"
                                        style="width: 200px"
                                        for="helpdesk5"
                                    >
                                        <span
                                            class="s_website_form_label_content"
                                        >Attachment(s)
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input
                                        id="helpdesk5"
                                        type="file"
                                        name="attachments"
                                        class="form-control s_website_form_input"
                                        multiple="true"
                                        accept="image/*,application/pdf,video/*"
                                    />
                                </div>
                            </div>
                            <!-- SUBMIT BUTTON -->
                            <div class="form-group row">
                                <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                    <button
                                        class="btn btn-primary btn-lg s_website_form_send"
                                    >Submit
                                        Ticket
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="oe_structure" id="oe_structure_website_bot" />
            </div>
        </div>
    </template>
    <!-- Template wrapper which inherits the main layout -->
    <template
        id="portal_create_ticket_wrapper"
        name="Create ticket wrapper"
        inherit_id="helpdesk_mgmt.portal_create_ticket_main_layout"
    >
        <xpath expr="//div[@id='wrap']" position="replace">
            <div t-if="team_id.endpoint_view_id">
                <t t-set="inner_form_xmlid" t-value="team_id.endpoint_view_id.xml_id" />
                <t t-call="#{inner_form_xmlid}" />
            </div>
            <div t-else="view_id">
                <t t-set="inner_form_xmlid" t-value="view_id" />
                <t t-call="#{inner_form_xmlid}" />
            </div>
        </xpath>
    </template>
    <template id="portal_thankyou_ticket" name="Thank you for your ticket submission">
        <t t-call="website.layout">
            <div id="wrap" class="container mt-4">
                <div class="oe_structure">
                    <section class="pt8 pb8">
                        <div class="container pt-3">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Your ticket has been sent successfully.
                                        <button
                                            type="button"
                                            class="close"
                                            data-dismiss="alert"
                                        >&amp;times;
                                        </button>
                                    </div>
                                    <p>
                                        We will get back to you shortly.
                                    </p>
                                </div>
                                <div class="col-lg-4">
                                    <t t-call="website.company_description" />
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>
