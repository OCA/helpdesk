<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Portal for helpdesk -->
        <record id="helpdesk_ticket_rule_portal" model="ir.rule">
            <field name="name">Portal IT Contact Tickets</field>
            <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
            <field
                name="domain_force"
            >['|', ('message_partner_ids','child_of',[user.commercial_partner_id.id]), '&amp;', (user.commercial_partner_id.it_contact, '=', True), ('partner_id', 'child_of', [user.commercial_partner_id.parent_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]" />
        </record>
    </data>
</odoo>
