<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="group_helpdesk_rest_api" model="res.groups">
            <field name="name">REST API User</field>
            <field name="category_id" ref="helpdesk_mgmt.module_helpdesk_category" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>
    </data>
    <data noupdate="1">
        <record id="helpesk_ticket_rest_api" model="ir.rule">
            <field name="name">REST API Tickets</field>
            <field ref="helpdesk_mgmt.model_helpdesk_ticket" name="model_id" />
            <field
                name="domain_force"
            >[('partner_id','child_of',[authenticated_partner_id])]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_rest_api'))]" />
        </record>
        <record id="helpesk_category_rest_api" model="ir.rule">
            <field name="name">REST API Categories</field>
            <field ref="helpdesk_mgmt.model_helpdesk_ticket_category" name="model_id" />
            <field name="domain_force">[('is_available_rest_api','=',True)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_rest_api'))]" />
        </record>
        <record id="helpesk_team_rest_api" model="ir.rule">
            <field name="name">REST API Team</field>
            <field ref="helpdesk_mgmt.model_helpdesk_ticket_team" name="model_id" />
            <field name="domain_force">[('is_available_rest_api','=',True)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_rest_api'))]" />
        </record>
        <record id="mail_message_rest_api" model="ir.rule">
            <field name="name">REST API Mail Messages</field>
            <field ref="mail.model_mail_message" name="model_id" />
            <field name="domain_force">[('subtype_id.internal', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_rest_api'))]" />
        </record>
    </data>
</odoo>
