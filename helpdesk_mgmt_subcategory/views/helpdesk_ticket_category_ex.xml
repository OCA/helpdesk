<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_category_form" model="ir.ui.view">
        <field name="model">helpdesk.ticket.category</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_category_form" />
        <field name="arch" type="xml">

            <xpath expr="//button[@name='toggle_active']" position="replace">
                <button>Counter</button>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="after">
                <field name="active" invisible="1" />
                <widget
                    name="web_ribbon"
                    title="Archived"
                    bg_color="bg-danger"
                    attrs="{'invisible': [('active', '=', True)]}"
                />
            </xpath>
            <xpath expr="//group[@name='main']/field" position="before">
                <field name="parent_id" />
            </xpath>
        </field>
    </record>
    
</odoo>