<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_helpdesk_category_form" model="ir.ui.view">
        <field name="model">helpdesk.ticket.category</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_category_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='toggle_active']" position="before">
                <button
                    type="action"
                    name="%(helpdesk_mgmt.helpdesk_ticket_action)s"
                    class="oe_stat_button"
                    icon="fa-ticket"
                    context="{'search_default_category_id': id}"
                >
                    <field name="tickets_count" string="Tickets" widget="statinfo" />
                </button>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="after">
                <field name="active" invisible="1" />
                <widget
                    name="web_ribbon"
                    title="Archived"
                    bg_color="bg-danger"
                    attrs="{'invisible': [('active', '=', True)]}"
                />
            </xpath>
            <xpath expr="//group[@name='main']/field" position="before">
                <field name="parent_id" />
                <field name="code" />
            </xpath>
        </field>
    </record>

    <record id="view_helpdesk_category_tree" model="ir.ui.view">
        <field name="model">helpdesk.ticket.category</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_category_tree" />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="name" position="after">
                <field name="complete_name" />
                <field name="code" />
            </field>
        </field>
    </record>

    <record id="view_helpdesk_ticket_category_search" model="ir.ui.view">
        <field name="model">helpdesk.ticket.category</field>
        <field
            name="inherit_id"
            ref="helpdesk_mgmt.view_helpdesk_ticket_category_search"
        />
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <group expand="1" string="Group By">
                    <filter
                        string="Parent"
                        name="parent_id"
                        context="{'group_by':'parent_id'}"
                    />
                </group>
            </search>
        </field>
    </record>


</odoo>
