<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="ticket_view_form" model="ir.ui.view">
    <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form" />
    <field name="model">helpdesk.ticket</field>
    <field name="arch" type="xml">
        <button name="assign_to_me" position="after">
            <button
                    string="Return sales lines"
                    name="return_sale_lines"
                    type="object"
                    class="oe_highlight"
                    attrs="{'invisible': [('sale_line_ids', '=', [])]}"
                />
        </button>
        <xpath expr="//div[@name='button_box']" position="inside">
            <field name="return_picking_ids" invisible="1" />
            <button
                    type="object"
                    name="action_view_returns"
                    class="oe_stat_button"
                    icon="fa-truck"
                    attrs="{'invisible': [('return_count', '=', 0)]}"
                    groups="base.group_user"
                >
                <field name="return_count" widget="statinfo" string="Returns" />
            </button>
        </xpath>
    </field>
</record>

</odoo>
