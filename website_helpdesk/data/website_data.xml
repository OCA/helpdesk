<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="helpdesk_mgmt.model_helpdesk_ticket"
                model="ir.model">
            <field name="website_form_default_field_id"
                   ref="helpdesk_mgmt.field_helpdesk_ticket__description"/>
            <field name="website_form_access">True</field>
            <field name="website_form_label">Create a helpdesk ticket</field>
        </record>
        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>helpdesk.ticket</value>
            <value eval="[
                'name',
                'description',
            ]"/>
        </function>

     <record id="registry_thanks" model="website.page">
        <field name="name">Thanks (Contact us)</field>
        <field name="type">qweb</field>
        <field name="url">/helpdesk-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">website_helpdesk.registry_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks (Contact us)" t-name="website_helpdesk.registry_thanks">
                <t t-call="website.layout">
                  <div id="wrap">
                    <div class="oe_structure" id="oe_structure_website_crm_contact_us_thanks_1"/>
                    <div class="container">
                        <h1>Thanks!</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="alert alert-success" role="status">
                                    Your message has been sent successfully.
                                    <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                                </div>
                                <p>
                                    We will get back to you shortly.
                                </p>
                            </div>
                            <div class="col-lg-4">
                                <t t-call="website.company_description"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure" id="oe_structure_website_crm_contact_us_thanks_2"/>
                  </div>
                </t>
            </t>
        </field>
    </record>

        <record id="new" model="ir.ui.view">
            <field name="name">Help Desk Ticket</field>
            <field name="type">qweb</field>
            <field name="key">website_helpdesk.new</field>
            <field name="arch" type="xml">
                <t name="New Matriculation" t-name="website_helpdesk.new">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="oe_structure">
                                <section class="pt8 pb8">
                                    <div class="container">
                                        <div class="row s_nb_column_fixed">
                                            <div class="col-lg-12 s_title pt16 pb16">
                                                <h1>Help Desk new ticket</h1>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="container mt-2">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div>
                                            <form action="/website_form/"
                                                  method="post"
                                                  data-model_name="helpdesk.ticket"
                                                  data-success_page="/helpdesk-thank-you"
                                                  class="s_website_form container-fluid mt32"
                                                  enctype="multipart/form-data"
                                                  data-editable-form="false">
                                                <div class="form-group row form-field o_website_form_required_custom">
                                                    <label class="col-lg-3 col-md-4 col-form-label"
                                                           for="name">
                                                        Subject:
                                                    </label>
                                                    <div class="col-lg-7 col-md-8">
                                                        <input type="text"
                                                               class="form-control o_website_form_input"
                                                               name="name"
                                                               t-att-value="request.params.get('name', '')"
                                                               required=""/>
                                                    </div>
                                                </div>
                                                <div class="form-group row form-field o_website_form_required_custom">
                                                    <label class="col-lg-3 col-md-4 col-form-label"
                                                           for="description">
                                                        Description:
                                                    </label>
                                                    <div class="col-lg-7 col-md-8">
                                                        <textarea
                                                               class="form-control o_website_form_input"
                                                               name="description"
                                                               t-att-value="request.params.get('description', '')"
                                                               required=""/>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                                        <a href="#"
                                                           role="button"
                                                           class="btn btn-primary btn-lg o_website_form_send">
                                                            Send
                                                        </a>
                                                        <span id="o_website_form_result"></span>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <t t-call="website.company_description"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure mt-2"/>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="new_page" model="website.page">
            <field name="url">/helpdesk/new</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="new"/>
        </record>

        <record id="menu_registry" model="website.menu">
            <field name="name">Help Desk Ticket</field>
            <field name="url">/helpdesk/new</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">60</field>
        </record>
    </data>
</odoo>
